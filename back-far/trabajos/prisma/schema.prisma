generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trabajo {
  id          Int             @id @default(autoincrement())
  nombre      String
  descripcion String?
  fechaInicio  DateTime
  fechaFin     DateTime?
  area         String?
  tipoEquipo  String?
  estado       String          @default("Pendiente")
  prioridad   Prioridad         @default(Media)
  imagenes     String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  equipos     TrabajoEquipo[]
  areaId      String?
  equipoId     Int?
  nombreEquipo String?
  encargadoId  Int?
  encargadoNombre String?
  asignaciones TrabajoAsignacion[]
  historial   HistorialTrabajo[]
  reportes    ReporteFinalizacion[]
}




model TrabajoAsignacion {
  id         Int       @id @default(autoincrement())
  trabajo    Trabajo   @relation(fields: [trabajoId], references: [id])
  trabajoId  Int
  tecnicoId  Int?                     // ID del técnico en otro microservicio
  tecnicoNombre String?               // Nombre denormalizado del técnico
  fechaAsignacion DateTime @default(now())
  fechaInicio DateTime
  fechaFin    DateTime?
  observaciones String?
  
  @@unique([trabajoId, tecnicoId])
}


model HistorialTrabajo {
  id        Int           @id @default(autoincrement())
  trabajo   Trabajo       @relation(fields: [trabajoId], references: [id])
  trabajoId Int
  estado    EstadoTrabajo
  fechaCambio DateTime    @default(now()) 
  usuarioId Int          
  usuarioNombre String   
  comentario String?
  metadata     String?
}

enum EstadoTrabajo {
  Pendiente
  Aceptado
  EnProgreso
  Rechazado
  Finalizado
  Cancelado
}

enum Prioridad {
  Baja
  Media
  Alta
  Urgente
}

model TrabajoEquipo {
  id        Int      @id @default(autoincrement())
  trabajoId Int
  userId    String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trabajo   Trabajo  @relation(fields: [trabajoId], references: [id])

  @@unique([trabajoId, userId])
}


model ReporteFinalizacion {
  id                 Int       @id @default(autoincrement())
  trabajo            Trabajo   @relation(fields: [trabajoId], references: [id])
  trabajoId          Int
  tecnicoId          Int
  fechaFinalizacion  DateTime
  observaciones      String?
  solucionAplicada   String?
  materialesUtilizados String?
  horasTrabajadas    Float?
  recomendaciones    String?
  documentos         String?   
  imagenes           String?   
  createdAt          DateTime  @default(now())
}